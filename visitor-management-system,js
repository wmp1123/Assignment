//To generate token
function generateToken(userProfile){
  return jwt.sign(
  userProfile,    //this is an obj
  'mypassword',           //password
  { expiresIn: '1h' });  //expires after 1 hour
}

function register1(client, data) {
  const result = client.db("visitor-management-system").collection("Users").insertOne(data);
}

async function login(client, data) {
  let match = await client.db("visitor-management-system").collection("Users").findOne({username: data.username})
  temporary = match.role
  if (match) {
    const result = data.password === match.password
    if (result) {
      token = generateToken(match)
      return {token, temporary}
    } else {
      return "Wrong password"
    }
  } else {
    return "User not found"
  }
}

async function register(client, data, data1){
  if(data1.role == 'Admin') {
    console.log(data)
    const result = await client.db("visitor-management-system").collection("Users").insertOne({
      username:data.username,
      password:data.password,
      name:data.name,
      email:data.email,
      role:'Host'
    })
  }

  if(data1.role == 'Host') {
    const result = await client.db("visitor-management-system").collection("Users").insertOne({
      username:data.username,
      password:data.password,
      name:data.name,
      email:data.email,
      role:'Visitor',
      host:data1.username
    })
  }
}

//to verify JWT Token
function verifyToken(req, res, next){
  let header = req.headers.authorization
  //to paste it in the cmd
  console.log(header);

  //split the bearer token 
  // take the index 1 , to exclude the bearer words
  let token = header.split(' ')[1];
  // secret verify must be same with secret in the generated
  jwt.verify(token, 'mypassword', function(err, decoded){
      if(err){
          res.send('Invalid token')
      }
      console.log(decoded);
      //so that can return req.user to use in the client 
      req.user = decoded
      next()
  });
}

async function encryptPassword(password) {
  const hash = await bcrypt.hash(password, saltRounds);  
  return hash
}

